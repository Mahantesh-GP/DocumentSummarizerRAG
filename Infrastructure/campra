using var jsonDoc = JsonDocument.Parse(responseText);
var root = jsonDoc.RootElement;

if (root.TryGetProperty("value", out var docs))
{
    Console.WriteLine("🔍 Search Results:");
    foreach (var doc in docs.EnumerateArray())
    {
        string hotelName = doc.GetProperty("HotelName").GetString();
        string description = doc.GetProperty("Description").GetString();
        string city = doc.GetProperty("Address").GetProperty("City").GetString();

        Console.WriteLine($"\n🏨 {hotelName}");
        Console.WriteLine($"📍 City: {city}");
        Console.WriteLine($"📝 {description}");
    }
}
else
{
    Console.WriteLine("No documents found.");
}
