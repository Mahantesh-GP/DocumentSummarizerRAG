using Azure;
using Azure.AI.OpenAI;

var client = new OpenAIClient(
    new Uri("https://<your-resource-name>.openai.azure.com/"),
    new AzureKeyCredential("<your-api-key>")
);

string deploymentName = "your-embedding-deployment"; // e.g., "text-embedding-ada-002"
string inputText = "This is a sample text to embed.";

var response = await client.GetEmbeddingsAsync(
    new EmbeddingsOptions(inputText),
    deploymentName
);

var embedding = response.Value.Data[0].Embedding;

// Print or store the vector
Console.WriteLine(string.Join(", ", embedding));
