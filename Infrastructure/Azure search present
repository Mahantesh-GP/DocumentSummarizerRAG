
string GetValue(SearchDocument doc, string key)
{
    return doc.ContainsKey(key) && doc[key] != null ? doc[key].ToString() : string.Empty;
}

var docFiles = new DocumentFields
{
    borrowerName = GetValue(doc, "borrowerName"),
    buyerName = GetValue(doc, "buyerName"),
    sellerName = GetValue(doc, "sellerName"),
    propertyAddress = GetValue(doc, "propertyAddress"),
    orderNumber = GetValue(doc, "orderNumber"),
    policyNumber = GetValue(doc, "policyNumber"),
    policyDate = GetValue(doc, "policyDate"),
    closingDate = GetValue(doc, "ClosingDate")
};
