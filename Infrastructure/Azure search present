public static class NormalizationHelper
{
    public static string NormalizeOrderNumber(string input)
    {
        if (string.IsNullOrWhiteSpace(input))
            return null;

        // Match patterns like 21-107 and convert to 2021-107
        var parts = input.Split('-');
        if (parts.Length == 2 && parts[0].Length == 2)
        {
            return $"20{parts[0]}-{parts[1]}";
        }

        return input;
    }

    public static string NormalizePropertyAddress(string input)
    {
        if (string.IsNullOrWhiteSpace(input))
            return null;

        // Lowercase, remove extra spaces, optional: remove punctuation
        var cleaned = input.Trim().ToLowerInvariant();

        // Optional: Normalize abbreviations (e.g., ct -> court)
        cleaned = cleaned.Replace(" ct ", " court ")
                         .Replace(" st ", " street ")
                         .Replace(" rd ", " road ")
                         .Replace(" ave ", " avenue ");

        return cleaned;
    }
}
