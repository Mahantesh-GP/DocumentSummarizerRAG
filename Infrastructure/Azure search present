var citations = string.Join("<br/>", docs.Select(d =>
    $"<a href=\"{d.FileUrl}\" target=\"_blank\">Source: {d.chunk_id}</a>"
));


var result = new StringBuilder();
result.AppendLine("<h3>Summary</h3>");
result.AppendLine(response.ToString());
result.AppendLine("<h3>Citations</h3>");
result.AppendLine(citations);
return result.ToString();
